# Django Configuration
# ====================
# Set DEBUG=True for staging/testing, DEBUG=False for production
DEBUG=True

# Generate a new secret key for production: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# For Railway: Set ALLOWED_HOSTS=yourdomain.com,*.railway.app
# For production: Set ALLOWED_HOSTS=perekas.ee
ALLOWED_HOSTS=*.railway.app

# Database
# ========
# Railway automatically provides DATABASE_URL when PostgreSQL service is added
# For local development, leave this empty to use SQLite
DATABASE_URL=

# Email Configuration (SMTP)
# ===========================
# Leave these empty for local development (will use console backend)
# For staging/production on Railway, configure SMTP settings

# SMTP Server (e.g., smtp.gmail.com, smtp.sendgrid.net)
EMAIL_HOST=

# SMTP Port (usually 587 for TLS, 465 for SSL)
EMAIL_PORT=587

# Use TLS (True/False)
EMAIL_USE_TLS=True

# Use SSL (True/False) - usually False if using TLS
EMAIL_USE_SSL=False

# SMTP Username (your email address)
EMAIL_HOST_USER=

# SMTP Password (app password, not your regular password)
EMAIL_HOST_PASSWORD=

# Default from email address
DEFAULT_FROM_EMAIL=noreply@perekas.ee

# Stripe Configuration
# ====================
# For staging: Use test keys (pk_test_... and sk_test_...)
# For production: Use live keys (pk_live_... and sk_live_...)

# Stripe Public Key
STRIPE_PUBLIC_KEY=

# Stripe Secret Key
STRIPE_SECRET_KEY=

# Stripe Webhook Secret (from Stripe Dashboard > Webhooks)
# Only needed in production/staging for webhook signature verification
STRIPE_WEBHOOK_SECRET=

# Stripe Price IDs
# ================
# Get these from your Stripe Dashboard > Products
# Test price IDs are already in settings.py as defaults
# For production, set your live price IDs here

STARTER_MONTHLY_PRICE_ID=
STARTER_YEARLY_PRICE_ID=
PRO_MONTHLY_PRICE_ID=
PRO_YEARLY_PRICE_ID=

# Notes:
# ======
# 1. Copy this file to .env for local development
# 2. Never commit .env to version control (it's in .gitignore)
# 3. For Railway deployment, set these as environment variables in the Railway dashboard
# 4. Railway automatically provides DATABASE_URL when you add a PostgreSQL service
