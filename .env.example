# Django Settings
# ===============

# Debug mode (True for development, False for production)
# REQUIRED in production
DEBUG=True

# Secret key for Django (generate with: python manage.py shell -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
# REQUIRED in production
SECRET_KEY=your-secret-key-here

# Allowed hosts (comma-separated list of domains)
# REQUIRED in production
# Example: ALLOWED_HOSTS=perekas.ee,your-app.railway.app
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# ========
# For production, use PostgreSQL connection string
# Example: postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///db.sqlite3

# Email Configuration
# ===================
# Optional - if not set, emails won't be sent
DEFAULT_FROM_EMAIL=noreply@perekas.ee
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# Stripe Configuration
# =====================
# REQUIRED in production
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Base URL (optional - defaults to request.build_absolute_uri())
# Example: STRIPE_BASE_URL=https://perekas.ee
STRIPE_BASE_URL=

# Stripe Price IDs (REQUIRED in production)
# Get these from: https://dashboard.stripe.com/products
STARTER_MONTHLY_PRICE_ID=price_your_starter_monthly_id
STARTER_YEARLY_PRICE_ID=price_your_starter_yearly_id
PRO_MONTHLY_PRICE_ID=price_your_pro_monthly_id
PRO_YEARLY_PRICE_ID=price_your_pro_yearly_id

# Stripe Customer Portal ID (REQUIRED in production)
# Get this from: https://dashboard.stripe.com/settings/billing/portal
STRIPE_CUSTOMER_PORTAL_ID=bpc_your_portal_id

# Security Settings (Production)
# ===============================
# These are optional and have sensible defaults
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
CSRF_TRUSTED_ORIGINS=https://perekas.ee,https://your-app.railway.app

# Railway Cron Secret (optional - for triggering maintenance tasks)
# Set this if you want to use the HTTP endpoint for maintenance tasks
RAILWAY_CRON_SECRET=your-random-secret-here
